###
# Generated by Chef for <%= @node[:fqdn] %>
###
<%= File.join(@path, 'shared/log/*.log') %> {
  daily
  missingok
  rotate 52
  olddir old
  compress
  delaycompress
  notifempty
  create 664 <%= @user %> <%= @group %>
  sharedscripts
  <% unless @prerotate.to_s.empty? %>
  prerotate
    <%= @prerotate %>
  endscript
  <% end %>
  postrotate
    kill -USR2 `cat <%= File.join(@path, 'current/tmp/pids/unicorn.pid') %>`
  endscript
}

