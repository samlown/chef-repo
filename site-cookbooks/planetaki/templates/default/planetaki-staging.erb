
upstream planetaki_devel_app {
  server unix:/home/planetaki/deploy/staging/shared/sockets/unicorn.sock;
}

server {
  listen 80;
  server_name nostromo.planetaki.com;

  access_log <%= @node[:nginx][:log_dir] %>/planetaki.access.log;

  root /home/planetaki/deploy/staging/current/public;

  location / {
    # needed to forward user's IP address to rails
    proxy_set_header  X-Real-IP  $remote_addr;
    
    # needed for HTTPS
    proxy_set_header  X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_redirect off;
    proxy_max_temp_file_size 0;

    if (!-f $request_filename) {
      proxy_pass http://planetaki_devel_app;
      break;
    }
  }

}
